<% include ../partials/header%>
<div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
  <div class="container-fluid">
    <div class="header-body">
    </div>
  </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--7">
  <!-- Table -->
  <div class="row">
    <div class="col">
      <div class="card shadow">
        <div class="card-header border-0">
          <h3 class="mb-0">Hostels</h3>
        </div>
        <div class="table-responsive">
          <table class="table align-items-center table-flush">
            <thead class="thead-light">
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Department</th>
                <th scope="col">Semester</th>
                <th scope="col">Email</th>
                <th scope="col">Phoneno.</th>
                <% if(currentUser.role === "warden" && currentUser.hostel.name === boarder[0].hostel.name){ %>
                <th scope="col"></th>
                <% } %>
                <th scope="col"></th>

              </tr>
            </thead>
            <tbody>
              <% boarder.forEach((boarder)=> { %>
              <tr>
                <th scope="row">
                  <div class="media align-items-center">
                    <a href="#" class="avatar rounded-circle mr-3" data-toggle="tooltip">

                      <i class="fa fa-female" aria-hidden="true"></i>


                    </a>
                    <div class="media-body">
                      <% if(boarder.firstName && boarder.lastName) { %>
                      <span class="mb-0 text-sm"><%=boarder.firstName %> <%=boarder.lastName %></span>
                      <% }else { %>
                      <span class="mb-0 text-sm"><%=boarder.username %></span>
                      <% } %>

                    </div>
                  </div>
                </th>
                <td>
                  <% if(boarder.department) { %>
                  <span class="mb-0 text-sm"><%=boarder.department %></span>
                  <% }else { %>
                  <span class="mb-0 text-sm"> - </span>
                  <% } %>
                </td>
                <td>

                  <% if(boarder.semester) { %>
                  <span class="mb-0 text-sm"><%=boarder.semester %></span>
                  <% }else { %>
                  <span class="mb-0 text-sm"> - </span>
                  <% } %>

                </td>
                <td>
                  <% if(boarder.email) { %>
                  <span class="mb-0 text-sm"><%=boarder.email %></span>
                  <% }else { %>
                  <span class="mb-0 text-sm"> - </span>
                  <% } %>
                </td>
                <td>
                  <% if(boarder.phoneno) { %>
                  <span class="mb-0 text-sm"><%=boarder.phoneno %></span>
                  <% }else { %>
                  <span class="mb-0 text-sm"> - </span>
                  <% } %>
                </td>
                <% if(currentUser.role === "warden" && currentUser.hostel.name == boarder.hostel.name){ %>
                <td class="text-right">
                  <a href="/dashboard/bill/fine/<%=boarder._id%>" class="btn btn-outline-danger btn-sm">Fine</a>
                </td>
                <% } %>

                <td class="text-right">
                  <div class="dropdown">
                    <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown"
                      aria-haspopup="true" aria-expanded="false">
                      <i class="fas fa-ellipsis-v"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                      <a class="dropdown-item" href="/dashboard/profile/<%=boarder._id%>">View</a>


                    </div>
                  </div>
                </td>
              </tr>
              <% }); %>





            </tbody>
          </table>
        </div>
