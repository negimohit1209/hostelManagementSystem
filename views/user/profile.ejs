<% include ../partials/header%>
<% if(user.cover) {%>
<div class="header pb-8 pt-5 pt-lg-8 d-flex align-items-center"
  style="min-height: 600px; background-image: url(<%=user.cover%>); background-size: cover; background-position: center top;">
  <% }else { %>
  <div class="header pb-8 pt-5 pt-lg-8 d-flex align-items-center"
    style="min-height: 600px; background-image: url(); background-size: cover; background-position: center top;">
    <% } %>
    <!-- Mask -->
    <span class="mask bg-gradient-default opacity-7"></span>
    <!-- Header container -->
    <div class="container-fluid d-flex align-items-center">
      <div class="row">
        <div class="col-lg-7 col-md-10">
          <!-- <h1 class="display-2 text-white">Hello Jesse</h1>
            <p class="text-white mt-0 mb-5">This is your profile page. You can see the progress you've made with your work and manage your projects or assigned tasks</p>
            <a href="#!" class="btn btn-info">Edit profile</a> -->
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--7">
    <div class="row">
      <div class="col-xl-12 order-xl-2 mb-5 mb-xl-0">
        <div class="card card-profile shadow">
          <div class="row justify-content-center">
            <div class="col-lg-3 order-lg-2">
              <div class="card-profile-image">
                <a href="#">
                  <% if(user.avatar) {%>
                  <img src="<%=user.avatar%>" class="rounded-circle">
                  <% }else { %>
                  <img src="https://dontpakao.files.wordpress.com/2015/06/no-pic-boy.jpg" class="rounded-circle">
                  <% } %>

                </a>
              </div>
            </div>
          </div>
          <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
            <div class="d-flex justify-content-between">
              <!-- <a href="#" class="btn btn-sm btn-info mr-4">Connect</a>
                <a href="#" class="btn btn-sm btn-default float-right">Message</a> -->
            </div>
          </div>
          <div class="card-body pt-0 pt-md-4">
            <div class="row">
              <div class="col">
                <div class="card-profile-stats d-flex justify-content-center mt-md-5">
                  <div>
                    <span class="heading"><%=user.role%></span>
                    <span class="description">Role</span>
                  </div>
                  <div>
                    <% if(user.sex == "male") {%>
                    <span class="heading">M</span>
                    <% }else { %>
                    <span class="heading">F</span>
                    <% } %>
                    <span class="description">Gender</span>
                  </div>
                  <!-- <div>
                      <span class="heading">89</span>
                      <span class="description">Comments</span>
                    </div> -->
                </div>
              </div>
            </div>
            <div class="text-center">
              <h3>
                <%= user.firstName %> <%=user.lastName%><span class="font-weight-light">, 27</span>
              </h3>
              <div class="h5 font-weight-300">
                <i class="ni location_pin mr-2"></i><%=user.city%>, <%=user.state%>
              </div>
              <div class="h5 mt-4">
                <i class="ni business_briefcase-24 mr-2"></i>Email: <%=user.email%>
              </div>
              <div class="h5 ">
                <i class="ni business_briefcase-24 mr-2"></i>Phone: <%=user.areacode%>-<%=user.phoneno%>
              </div>
              <div>
                <i class="ni education_hat mr-2"></i><%=user.college%>
              </div>
              <hr class="my-4" />
              <% if(user.bio) {%>
              <p><%=user.bio%></p>
              <% }else { %>
              <% if(currentUser._id === user._id){ %>
              <form action="/dashboard/profile/<%=user._id%>" method="post">
                <div class="form-group">
                  <label class="form-control-label">Add Bio</label>
                  <textarea rows="4" class="form-control form-control-alternative"
                    placeholder="A few words about yourself..." name="bio"></textarea>
                </div>
                <div class="text-center">
                  <input class="btn btn-sm btn-primary mt-4" type="submit" value="Submit bio">
                  <!-- <button type="submit" class="btn btn-primary mt-4">Create account</button> -->
                </div>
              </form>
              <% } else {%>
              No Bio added by the user.
              <% }%>

              <% } %>


            </div>
          </div>
        </div>
      </div>

    </div>
    <!-- Footer -->
    <% include ../partials/footer%>
  </div>
</div>
<!-- Argon Scripts -->
<!-- Core -->
<script src="/vendor/jquery/dist/jquery.min.js"></script>
<script src="/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<!-- Argon JS -->
<script src="/js/argon.js?v=1.0.0"></script>
</body>

</html>